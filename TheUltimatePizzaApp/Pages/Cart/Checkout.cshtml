@page
@model TheUltimatePizzaApp.Pages.Cart.CheckoutModel
@{
	ViewData["Title"] = "Checkout";
}
}
<div class="container">
	<h1>Your Order!</h1>
	@{
		var photoPath = "~/images/" + (@Model.ImageTitle + ".png");
	}
	<div class="align-content-center">
		<div class="col-3 mx-auto mb-5">
			<img src="@photoPath" class="w-100" asp-append-version="true" />
			<p>Your order for @Model.PizzaName Pizza is ready!</p>
			<p>
				Total Purchase price for your Order is:
				@Model.PizzaPrice.ToString("c")
			</p>
			<br />
		</div>
	</div>
</div>
